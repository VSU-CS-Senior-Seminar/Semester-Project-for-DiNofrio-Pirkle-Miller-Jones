<h1>Listing Posts</h1>
  <div class="FunkyTable" >
  
  <table>
    <tbody>
      <tr>
        <td>Category</td>
        <td>Title</td>
        <td>Content</td>
        <td>Likes</td>
        <td colspan="3"></td>
      </tr>
  
      <% if current_user.admin? %>
      <% @posts.each do |post| %>
