<div class="container2">
  <div class="post_form">
    <%= form_for(@post) do |f| %>
      <% if @post.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
    
          <ul>
          <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      
      
      <fieldset>
        <legend>Create A New Post</legend>
        <div class="container1">
          <div class="field">
            <%= f.label :category %><br>
            <%= f.select :category, Post::CATEGORY_TYPES, prompt: 'Select Category' %>
          </div>
          <div class="field">
            <%= f.label :title %><br>
            <%= f.text_field :title %>
          </div>
          <div class="field">
            <%= f.label :content %><br>
            <%= f.text_area :content %>
          </div>
          <div class="actions">
            <%= f.submit %>    <%= link_to 'Back', posts_path %>
          </div>
        </div>
      </fieldset>
      
    <% end %>
  </div>
</div>